<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    app:cardElevation="11dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/toolbar"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/taskTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Name:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/taskValueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NoteMe Project"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginHorizontal="19dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/taskTitleId"
            app:layout_constraintStart_toEndOf="@+id/taskTitleId"
            />

        <TextView
            android:id="@+id/createDateTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create date:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/taskTitleId"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/createDateValueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02.11.2021"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/createDateTitleId"
            app:layout_constraintStart_toEndOf="@+id/createDateTitleId"
            />

        <TextView
            android:id="@+id/deadlineTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline:"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/createDateTitleId"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/deadlineValueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02.11.2021"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginHorizontal="44dp"
            app:layout_constraintBottom_toBottomOf="@+id/deadlineTitleId"
            app:layout_constraintStart_toEndOf="@+id/deadlineTitleId"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_edit_task"
                android:layout_marginRight="30dp"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_delete"
                />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>